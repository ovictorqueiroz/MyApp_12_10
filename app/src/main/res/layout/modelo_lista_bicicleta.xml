<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/modeloCardBike"
    android:layout_width="375dp"
    android:layout_height="200dp"
    android:layout_gravity="center_horizontal"
    android:layout_margin="15dp"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/modeloCardImg"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:background="#2c2c2c"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp"
            >

            <TextView
                android:id="@+id/modeloCardHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/bbhsansbartle"
                android:gravity="center_horizontal"
                android:text="Nome Bike" />

            <TextView
                android:id="@+id/modeloCardDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/outfitregular"
                android:text="Descrição da Bicicleta" />

            <TextView
                android:id="@+id/modeloCardPreco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:fontFamily="@font/bbhsansbartle"
                android:text="R$ 0,00" />


        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>